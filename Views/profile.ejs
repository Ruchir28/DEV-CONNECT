<h2 class="display-5" style="text-align: center;">User Profile</h2>
<div class="card mb-4">
    <h4 class="card-header bg-dark text-white">
        Hey  
        <img src="<%= user.avatar %>" alt="Ni mili photu yaar" width="100" height="100" style="border-radius: 50%;">
        <%= user.name %> 
    </h4>
    <ul class="list-group">
        <li class="list-group-item">
            <span class="badge badge-success mr-2">Name:</span><%= locals.user.name %> 
        </li>
        <li class="list-group-item">
            <span class="badge badge-success mr-2">Email:</span><%= locals.user.email %>
        </li>
        <li class="list-group-item">
            <span class="badge badge-danger mr-2">Update form</span>
        </li>
    </ul>
    <form action="/users/update/<%= locals.user._id %>" method="POST" class="card mb-4" enctype="multipart/form-data" style="border: none; padding: 10;">
        <div class="form-group">
          <label for="formGroupExampleInput">Enter new name</label>
          <input required name="name" type="text" class="form-control" id="formGroupExampleInput" value="<%= locals.user.name %>">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Enter new Email</label>
          <input required name="email" type="text" class="form-control" id="formGroupExampleInput2" value="<%= locals.user.email %>">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Upload Profile Picture</label>
            <input required name="avatar" type="file" class="form-control" id="formGroupExampleInput2">
          </div>
        <button class="btn btn-success">Update</button>
      </form>
</div>

<div class="container row">
  <div class="col-4 offset-2">
    <h4 class="display-4">Following</h2>
      <ul class="list-group">
        <% for(friendship of following){ %> 
          <a href="/users/viewuser/<%= friendship.to_user._id %>" class="list-group-item">
            <img src="<%= friendship.to_user.avatar %>" height="50px" width="50px" style="border-radius: 50%;" alt="">
            <%= friendship.to_user.name %> 
          </a>
        <% } %> 
        </ul>
  </div>
  <div class="col-4 offset-2">
    <h2 class="display-4">Followers</h2>
    <ul class="list-group">
      <% for(friendship of followers){ %> 
        <a href="/users/viewuser/<%= friendship.from_user._id %>" class="list-group-item">
          <img src="<%= friendship.from_user.avatar %>" height="50px" width="50px" style="border-radius: 50%;" alt="">
          <%= friendship.from_user.name %> 
        </a>
      <% } %> 
      </ul>
  </div>
</div>